{
  "version": "0.2.0",
  "configurations": [
    {
      "name": ".NET Core Launch (console)",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build",
      "program": "${workspaceFolder}/src/bin/Debug/net8.0-windows/HomeAssistantWindowsVolumeSync.exe",
      "args": [],
      "cwd": "${workspaceFolder}/src",
      "console": "externalTerminal",
      "stopAtEntry": false,
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development",
        "DOTNET_ENVIRONMENT": "Development"
      }
    },
    {
      "name": ".NET Core Test (All)",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "test",
      "program": "dotnet",
      "args": [
        "test",
        "${workspaceFolder}\\tests\\HomeAssistantWindowsVolumeSync.Tests.csproj",
        "--logger:console;verbosity=detailed"
      ],
      "cwd": "${workspaceFolder}",
      "console": "internalConsole",
      "stopAtEntry": false
    },
    {
      "name": ".NET Core Test (Current File)",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "test",
      "program": "dotnet",
      "args": [
        "test",
        "${workspaceFolder}\\tests\\HomeAssistantWindowsVolumeSync.Tests.csproj",
        "--filter",
        "FullyQualifiedName~${fileBasenameNoExtension}",
        "--logger:console;verbosity=detailed"
      ],
      "cwd": "${workspaceFolder}",
      "console": "internalConsole",
      "stopAtEntry": false
    },
    {
      "name": ".NET Core Watch (Hot Reload)",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "watch",
      "program": "${workspaceFolder}/src/bin/Debug/net8.0-windows/HomeAssistantWindowsVolumeSync.exe",
      "args": [],
      "cwd": "${workspaceFolder}/src",
      "console": "externalTerminal",
      "stopAtEntry": false,
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development",
        "DOTNET_ENVIRONMENT": "Development",
        "DOTNET_WATCH": "1"
      },
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
      }
    },
    {
      "name": ".NET Core Attach",
      "type": "coreclr",
      "request": "attach"
    }
  ]
}