{
  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "HomeAssistantWindowsVolumeSync": "Warning",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Warning",
      "System.Net.Http.HttpClient": "Warning"
    },
    "Console": {
      "LogLevel": {
        "Default": "Warning",
        "HomeAssistantWindowsVolumeSync": "Warning"
      }
    },
    "Debug": {
      "LogLevel": {
        "Default": "Warning",
        "HomeAssistantWindowsVolumeSync": "Warning"
      }
    },
    "EventLog": {
      "SourceName": "HomeAssistant Windows Volume Sync",
      "LogName": "Application",
      "LogLevel": {
        "Default": "Warning",
        "HomeAssistantWindowsVolumeSync": "Warning",
        "Microsoft.Hosting.Lifetime": "Warning"
      }
    }
  },
  "HomeAssistant": {
    "WebhookUrl": "https://your-home-assistant-url",
    "WebhookPath": "/api/webhook/",
    "WebhookId": "homeassistant_windows_volume_sync",
    "TargetMediaPlayer": "media_player.your_media_player",
    "StrictTLS": true,
    "DebounceTimer": 100,
    "HealthCheckTimer": 5000,
    "HealthCheckRetries": 3
  }
}